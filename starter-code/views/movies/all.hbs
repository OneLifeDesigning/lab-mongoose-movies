<div class="container">
  <h2 class="mb-3">{{title}}</h2>
  <div class="row">
    {{#each movies as |movie|}}
    <div class="col-12 col-md-3">
      <div class="card border-dark mb-5">
        <div class="card-body">
          <p class="mb-0 text-center"><a href="/movie/{{ movie.id }}">{{ movie.title }} <br><small>{{ movie.genre }}</small></a></p>
        </div>
      </div>
    </div>
    {{/each}}
    <div class="col-12 col-md-4 offset-md-4">
      <a href="/movies/create" class="btn btn-primary btn-block">Add more</a>
    </div>
  </div>
</div>